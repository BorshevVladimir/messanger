{{#PageOverlay}}
	{{#Card title='Настройка профиля'}}
	<div class="user-settings-form__avatar">
		{{#UploadFile name='avatar' onSelect=onAvatarChange accept='image/*' }}
			{{{ Avatar big=true src=avatar }}}
		{{/UploadFile }}
	</div>
	{{{ ComplexForm id='login-form' formInputs=formInputs onFormSubmit=onFormSubmit submitButtonTitle="Сохранить" }}}
	<div class="form-link">
			{{#Link onClick=goToChatPage }}
				Назад
			{{/Link}}
		</div>
	{{/Card}}
{{/PageOverlay}}