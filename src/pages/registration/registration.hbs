{{#PageOverlay}}
	{{#Card title='Регистрация'}}
		{{#Form classes='registration-form' ref='form' id='registration-form' onSubmit=onSubmit}}
			{{#each formInputs}}
				{{{FormInput
					ref=this.ref
					label=this.label
					placeholder=this.placeholder
					classes='registration-form__item'
					name=@key
					type=this.type
					validator=this.validator
					error=this.error
				}}}
			{{/each}}
			<div class='registration-form__item form-buttons'>
				{{#Button}}Зарегистироваться{{/Button}}
				{{#Link onClick=goToLoginPage }}
					Войти
				{{/Link}}
			</div>
		{{/Form}}
	{{/Card}}
{{/PageOverlay}}
